<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE urlrewrite PUBLIC "-//tuckey.org//DTD UrlRewrite 4.0//EN"
    "http://www.tuckey.org/res/dtds/urlrewrite4.0.dtd">
<urlrewrite>

    <!-- /banh-mi-phuong â†’ FORWARD to /detail/banh-mi-phuong -->
    <rule>
        <from>^/([a-zA-Z0-9-]+)$</from>
        <to type="forward" last="true">/detail/$1</to>
    </rule>

    <!-- Allow static files -->
    <rule>
        <from>^/(css|js|images|img|api)/.*$</from>
        <to type="passthrough" last="true">/$0</to>
    </rule>

    <rule>
        <from>^/.*\.(css|js|png|jpg|jpeg|gif|svg|woff2?|ttf|ico)$</from>
        <to type="passthrough" last="true">/$0</to>
    </rule>

</urlrewrite>